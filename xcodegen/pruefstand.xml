<?xml version="1.0" encoding="utf-8" ?>
<spacesystem>
	<connections>
		<incomming>
			<connection name="sharkSerial" type="input">
				<stage>
					<class>smp</class>
				</stage>
			</connection>
		</incomming>
		<outgoing>
			<connection name="telegrafStream">
				<stage>
					<class>console</class>
				</stage>
				<stage>
					<class>udp</class>
					<parameter name="remoteendpoint">10.0.1.131:8094</parameter>
					<parameter name="localendpoint">0.0.0.0:7000</parameter>
				</stage>
			</connection>
		</outgoing>
	</connections>
	<symbols>
	</symbols>
	<system name="shark">
		<defaultInput>sharkSerial</defaultInput>
		<defaultOutput>telegrafStream</defaultOutput>
		<messages>
			<message name="Servo0" identifier="0x0100">
				<symbol>
					<entry name="timestamp" type="uint" bitlength="32"/>
					<entry name="voltage" type="float"/>
					<entry name="current" type="float"/>
					<entry name="powerStageTemperature" type="float"/>
					<entry name="temperature" type="float"/>
					<entry name="powerdraw" type="float"/>
					<entry name="position" type="float"/>
				</symbol>
			</message>
			<message name="Accelerometer" identifier="0x0200">
				<symbol>
					<entry name="timestamp" type="uint" bitlength="32"/>
					<entry name="x" type="float"/>
					<entry name="y" type="float"/>
					<entry name="z" type="float"/>
				</symbol>
			</message>
		</messages>
		<commands>
		</commands>
	</system>
</spacesystem>